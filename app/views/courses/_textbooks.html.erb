<%= render "shared/card", id: "textbooks", title: "Textbooks" do %>
  <% if textbooks.empty? %>
    <div class="px-4 py-5 sm:p-6">
      <p class="text-base text-gray-500 dark:text-gray-400">
        Textbook information not available.
      </p>
    </div>
  <% else %>
    <%= render "shared/list", collection: textbooks, paginate: false do |textbook| %>
      <%= render "shared/list_item",
                 link: textbook.amazon_link,
                 title: textbook.title,
                 subtitle: textbook.sublabel %>
    <% end %>
    <div class="px-4 py-3 flex items-center justify-between border-t border-gray-200 dark:border-gray-700 sm:px-6">
      <p class="text-xs text-gray-500 dark:text-gray-400">
        Support Hotseat! We earn a commission on textbooks purchased via these links.
      </p>
    </div>
  <% end %>
<% end %>
