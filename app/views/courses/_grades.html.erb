<% if grade_data.empty? %>
  <%= render "shared/card", id: "previous-grades", title: "Previous Grades" do %>
    <div class="px-4 py-5 sm:p-6">
      <p class="text-base text-gray-500 dark:text-gray-400">
        Grade distributions not available.
      </p>
    </div>
  <% end %>
<% else %>
  <%= react_component_transparent("GradeCard",
                                  props: {
                                    id: "previous-grades",
                                    termGradeData: grade_data,
                                  }) %>
<% end %>
