<div class="pt-6 md:grid md:grid-cols-12 md:gap-8">
  <dt class="text-base font-medium text-gray-900 dark:text-gray-50 md:col-span-5">
    <%= question %>
  </dt>
  <dd class="mt-2 md:mt-0 md:col-span-7">
    <p class="text-base text-gray-500 dark:text-gray-400">
      <% if local_assigns[:answer] %>
        <%= answer %>
      <% else %>
        <%= yield %>
      <% end %>
    </p>
  </dd>
</div>
